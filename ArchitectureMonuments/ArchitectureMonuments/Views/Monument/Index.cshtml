    <style></style>

    <!-- Load Main CSS Compilled without JS -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link rel="stylesheet" href="~/Content/css/monuments.css">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="~/Scripts/bootstrap.min.js"></script>
    
    

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="shortcut icon" href="img/favicon/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="img/favicon/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="img/favicon/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="img/favicon/apple-touch-icon-114x114.png">

</head>

<body>
    
    <header>

        <div id="modDialog" class="modal fade">
            <div id="dialogContent" class="modal-dialog"></div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="background">
                    <div class="menu-line clearfix">
                        <div class="col-md-2">
                            <a href="#" class="logo"><img src="~/Content/img/logo.png" alt="logo"></a>
                        </div>
                        <div class="col-md-10 ">
                            <nav class="main-menu">
                                <ul>
                                    <li class"active">@Html.ActionLink("головна", "Index", "Monument")</li>
                                    <li><a href="#">екскурсії</a></li>
                                    <li>@Html.ActionLink("карта", "Index", "Map")</li>
                                    <li><a href="#">допомога</a></li>
                                    <li><a href="#">інформація</a></li>
                                    <li><a href="#">контакти</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="col-md-10 col-md-offset-1">
                        <div href="#" class="text">lviv architectural monuments</div>
                    </div>
                    <div class="col-md-8 col-md-offset-2">
                        @using (Html.BeginForm("Result", "Search"))
                        {
                       
                            <input class="namanyay-search-box" name="search_text" size="40" type="text" placeholder="Введіть пам'ятку..." />
                            <input class="namanyay-search-btn" value="Пошук" type="submit" />
                        
                        }
                    </div>
                </div>
                <br />
                <div class="3rectangles">
                    @{ 
                        var tblTestList = Model.ToList();
                        
                        for (var i = 0; i < tblTestList.Count(); i += 3)

                        {
                    <div class="col-md-3 col-md-offset-2">
                        <div class="rectangle1">
                            <div class="circle1">
                                <a href="#" class="circlee1">
                                    <div class="mainimages">
                                        <img src="@tblTestList[i].main_photo_path" alt="circle" width="200" height="200">
                                    </div>
                                </a>
                            </div>
                            <div class="name">@tblTestList[i].name</div>
                            
                            <div class="opis">
                                <p>@tblTestList[i].description.Remove(tblTestList[i].description.IndexOf('.'))...<br /><br />
                                
                                @Html.ActionLink("Детальніше", "Details", new { id = tblTestList[i].Id }, new { @class = "compItem" })</p>
                                    
                            </div>
                            <a href="#" class="like">
                                <img src="~/Content/img/like.svg" alt="like"><span class="numoflikes">@tblTestList[i].likes</span>
                            </a>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="rectangle2">
                            <div class="circle1">
                                <a href="#" class="circlee1">
                                    <div class="mainimages">
                                        <img src="@tblTestList[i+1].main_photo_path" alt="circle" width="200" height="200">
                                    </div>
                                </a>
                            </div>
                            <div class="name">@tblTestList[i+1].name</div>
                            <div class="opis">
                                <p>
                                    @tblTestList[i+1].description.Remove(tblTestList[i+1].description.IndexOf('.'))...<br /><br />
                                    @Html.ActionLink("Детальніше", "Details", new { id = tblTestList[i+1].Id }, new { @class = "compItem" })
                            </div>
                            <a href="#" class="like">
                                <img src="~/Content/img/like.svg" alt="like"><span class="numoflikes">@tblTestList[i+1].likes</span>
                            </a>

                        </div>
                    </div>


                    <div class="col-md-3">
                        <div class="rectangle3">
                            <div class="circle1">
                                <a href="#" class="circlee1">
                                    <div class="mainimages">
                                        <img src="@tblTestList[i+2].main_photo_path" alt="circle" width="200" height="200">
                                    </div>
                                </a>
                            </div>
                            <div class="name">@tblTestList[i + 2].name</div>
                            <div class="opis">
                                <p>
                                    @tblTestList[i+2].description.Remove(tblTestList[i+2].description.IndexOf('.'))...<br /><br />
                                    @Html.ActionLink("Детальніше", "Details", new { id = tblTestList[i+2].Id }, new { @class = "compItem" })
                            </div>
                            <a href="#" class="like">
                                <img src="~/Content/img/like.svg" alt="like"><span class="numoflikes">@tblTestList[i+2].likes</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-12">
                    <div class="space"></div>
                    </DIV>
                            }
                        }
                </div>
            </div>
        </div>
      

    </header>
    <div class="hidden"></div>

    <!--[if lt IE 9]>
    <script src="libs/html5shiv/es5-shim.min.js"></script>
    <script src="libs/html5shiv/html5shiv.min.js"></script>
